<body>
   <%- include('../includes/nav.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/signup" method="POST">
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input
                class="<%= validationErrors.find(err=> err.path === 'email') ? 'invalid' : '' %>"
                type="email" name="email" id="email" value="<%= oldInputs.email %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input
                class="<%= validationErrors.find(err=> err.path === 'passowrd') ? 'invalid' : '' %>"
                type="password" name="password" id="password" value="<%= oldInputs.password %>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input
                class="<%= validationErrors.find(err=> err.path === 'confirmPassword') ? 'invalid' : '' %>"
                type="password" name="confirmPassword" id="confirmPassword" value="<%= oldInputs.confirmPassword %>">
            </div>
            <button class="btn" type="submit">Signup</button>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        </form>
    </main>
<%- include('../includes/end.ejs') %>